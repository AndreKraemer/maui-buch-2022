<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ViewsSample.Views.ShapesSamplePage"
             Title="ShapesSamplePage">
    <VerticalStackLayout Padding="20">
        <Label Text="Eine Linie"/>
        <Line X1="0" X2="250" Y1="0" Y2="0" 
              Stroke="Black" 
              StrokeThickness="5" />

        <Label Text="Eine gestrichelte Linie"/>
        <Line X1="0" X2="1" Y1="0" Y2="1"
               Aspect="Fill"
               Stroke="Black" 
               StrokeThickness="5"
               StrokeDashArray="3,2"/>

        <Label Text="Eine Rechteck"/>
        <Rectangle 
               HeightRequest="100"
               WidthRequest="200"
               Stroke="Black" 
               StrokeThickness="2"
               HorizontalOptions="Start"/>

        <Label Text="Eine abgerundetes Rechteck"/>
        <RoundRectangle 
               HeightRequest="100"
               WidthRequest="200"
               Stroke="Black" 
               StrokeThickness="2"
               HorizontalOptions="Start"
               CornerRadius="10,20,40,80"/>

    </VerticalStackLayout>
</ContentPage>