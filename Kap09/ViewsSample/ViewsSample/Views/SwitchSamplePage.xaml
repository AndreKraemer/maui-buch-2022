<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ViewsSample.Views.SwitchSamplePage"
             Title="Switch Demo">
    <ContentPage.Resources>
        <Style TargetType="Label">
            <Setter Property="HeightRequest" Value="40"></Setter>
            <Setter Property="Margin" Value="1"></Setter>
            <Setter Property="FontSize" Value="Medium"></Setter>
        </Style>
    </ContentPage.Resources>
    <ContentPage.Content>
        <FlexLayout Margin="20" JustifyContent="Start" AlignItems="Start" AlignContent="Start" Wrap="Wrap">
            <Switch Toggled="Switch_OnToggled" FlexLayout.Basis="20%"></Switch>
            <Label Text="Taschenlampe" FlexLayout.Basis="70%"></Label>
            <Switch FlexLayout.Basis="20%"></Switch>
            <Label Text="WLAN" FlexLayout.Basis="70%"></Label>
        </FlexLayout>
    </ContentPage.Content>
</ContentPage>