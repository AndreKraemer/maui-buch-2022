<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ViewsSample.Views.DatePickerTimePickerSamplePage"
             Title="DatePicker / TimePicker Demo">
    <ContentPage.Content>
        <StackLayout Margin="20">
            <Label Text="Bitte wählen Sie Ihren Termin"/>
            <DatePicker DateSelected="DatePicker_OnDateSelected"></DatePicker>
            <TimePicker PropertyChanged="TimePicker_Changed"></TimePicker>
            <Label Text="Ihre Auswahl lautet:"/>
            <Label x:Name="ResultDateLabel" Text=""/>
            <Label x:Name="ResultTimeLabel" Text=""/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>