<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ViewsSample.Views.PickerSamplePage"
             Title="Picker Demo">
    <ContentPage.Content>
        <StackLayout Margin="20"> 
            <Picker Title="Bitte wählen Sie eine Option" SelectedIndexChanged="Picker_OnSelectedIndexChanged">
                <Picker.Items>
                    <x:String>Option 1</x:String>
                    <x:String>Option 2</x:String>
                    <x:String>Option 3</x:String>
                    <x:String>Option 4</x:String>
                    <x:String>Option 5</x:String>
                    <x:String>Option 6</x:String>
                </Picker.Items>
            </Picker>
            <Label Text="Ihre Wahl lautet:"></Label>
            <Label x:Name="ResultLabel"></Label>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>